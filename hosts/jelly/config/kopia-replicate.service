[Unit]
Description=Kopia Backup Replication Service
After=kopia-backup.service
Wants=kopia-backup.service

[Service]
Type=oneshot
Environment=KOPIA_PASSWORD_FILE=/root/.kopia-password
ExecStart=/usr/local/bin/kopia repository sync-to sftp --host=richmcbnas --username=richmcb --path=/drose/backups/kopia_sync --keyfile=/home/drose/.ssh/id_ed25519 --known-hosts=/home/drose/.ssh/known_hosts --delete
User=root

[Install]
WantedBy=multi-user.target 